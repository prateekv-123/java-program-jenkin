pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // This is skipped if using "Pipeline from SCM"
                echo 'Checking out the code...'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy step - add your deployment commands here'
                // For example: sh './deploy.sh'
            }
        }
    }
}
